
@model TaskFix

<h1>Add New Task</h1>

<form method="post" class="container">
    <div class="row">
        <div class="col-md-6">
            <input asp-for="TaskId" type="hidden" />
            <div class="form-group">
                <label asp-for="TaskName" required>Task Name</label>
                <input asp-for="TaskName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="DueDate">Due Date:</label>
                <input asp-for="DueDate" class="form-control" type="date" pattern="\d{1,2}/\d{1,2}/\d{4}" placeholder="MM/DD/YYYY" />
            </div>
            <label asp-for="Quadrant" required>Quadrant</label>
            <select asp-for="Quadrant" class="form-control">
                <option value="">Select a Quadrant</option>
                <option value="1">Quadrant I: Important / Urgent</option>
                <option value="2">Quadrant II: Important / Not Urgent</option>
                <option value="3">Quadrant III: Not Important / Urgent</option>
                <option value="4">Quadrant IV: Not Important / Not Urgent</option>
            </select>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label asp-for="CategoryId">Category</label>
                <select asp-for="CategoryId" class="form-control">
                    <option value=""> Select a Category</option>
                    @foreach (Category c in ViewBag.Categories)
                    {
                        <option value="@c.CategoryId">@c.CategoryName</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Completed">Completed?</label>
                <select asp-for="Completed" class="form-control">
                    <option value="true">Yes</option>
                    <option value="false">No</option>
                </select>
            </div>

        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <button type="submit" class="btn btn-primary">Submit Task</button>
        </div>
    </div>
</form>

