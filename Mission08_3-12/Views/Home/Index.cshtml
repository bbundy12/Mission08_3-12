@model List<Task>

<div class="container">
    <div class="row">
        <!-- Quadrant I: Important / Urgent -->
        <div class="col-md-6">
            <h2>Quadrant I: Important / Urgent</h2>
            @foreach (var task in Model)
            {
                if (!task.Completed && task.Quadrant == 1)
                {
                    <div>
                        <p>Task: @task.Task</p>
                        <p>Due: @task.DueDate.ToShortDateString()</p>
                        <p>Category: @task.CategoryName</p>
                        <a class="btn btn-info" asp-controller="Tasks" asp-action="Edit" asp-route-id="@task.TaskId">Edit</a>
                        <a class="btn btn-danger" asp-controller="Tasks" asp-action="Delete" asp-route-id="@task.TaskId">Delete</a>
                    </div>
                }
            }
        </div>

        <!-- Quadrant II: Important / Not Urgent -->
        <div class="col-md-6">
            <h2>Quadrant II: Important / Not Urgent</h2>
            @foreach (var task in Model)
            {
                if (!task.Completed && task.Quadrant == 2)
                {
                    <div>
                        <p>Task: @task.Task</p>
                        <p>Due: @task.DueDate.ToShortDateString()</p>
                        <p>Category: @task.CategoryName</p>
                        <a class="btn btn-info" asp-controller="Tasks" asp-action="Edit" asp-route-id="@task.TaskId">Edit</a>
                        <a class="btn btn-danger" asp-controller="Tasks" asp-action="Delete" asp-route-id="@task.TaskId">Delete</a>
                    </div>
                }
            }
        </div>
    </div>

    <div class="row">
        <!-- Quadrant III: Not Important / Urgent -->
        <div class="col-md-6">
            <h2>Quadrant III: Not Important / Urgent</h2>
            @foreach (var task in Model)
            {
                if (!task.Completed && task.Quadrant == 3)
                {
                    <div>
                        <p>Task: @task.Task</p>
                        <p>Due: @task.DueDate.ToShortDateString()</p>
                        <p>Category: @task.CategoryName</p>
                        <a class="btn btn-info" asp-controller="Tasks" asp-action="Edit" asp-route-id="@task.TaskId">Edit</a>
                        <a class="btn btn-danger" asp-controller="Tasks" asp-action="Delete" asp-route-id="@task.TaskId">Delete</a>
                    </div>
                }
            }
        </div>

        <!-- Quadrant IV: Not Important / Not Urgent -->
        <div class="col-md-6">
            <h2>Quadrant IV: Not Important / Not Urgent</h2>
            @foreach (var task in Model)
            {
                if (!task.Completed && task.Quadrant == 4)
                {
                    <div>
                        <p>Task: @task.Task</p>
                        <p>Due: @task.DueDate.ToShortDateString()</p>
                        <p>Category: @task.CategoryName</p>
                        <a class="btn btn-info" asp-controller="Tasks" asp-action="Edit" asp-route-id="@task.TaskId">Update</a>
                        <a class="btn btn-danger" asp-controller="Tasks" asp-action="Delete" asp-route-id="@task.TaskId">Delete</a>
                    </div>
                }
            }
        </div>
    </div>
</div>

