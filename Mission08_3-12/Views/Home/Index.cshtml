@model List<Task>

<div class="container">
    <div class="row">
        <!-- Quadrant I: Important / Urgent -->
        <div class="col-md-6">
            <h2>Quadrant I: Important / Urgent</h2>
            <table class="table">
                <thead>
                    <tr>
                        <th>Task</th>
                        <th>Due</th>
                        <th>Category</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var task in Model)
                    {
                        if (!task.Completed && task.Quadrant == 1)
                        {
                            <tr>
                                <td>@task.Task</td>
                                <td>@task.DueDate.ToShortDateString()</td>
                                <td>@task.Category.CategoryName</td>
                                <td>
                                    <a class="btn btn-info btn-sm" asp-controller="Tasks" asp-action="Edit" asp-route-id="@task.TaskId">Edit</a>
                                    <a class="btn btn-danger btn-sm" asp-controller="Tasks" asp-action="Delete" asp-route-id="@task.TaskId">Delete</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>

